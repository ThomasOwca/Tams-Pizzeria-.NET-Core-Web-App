@model TamsPizzeriaWebApp.Models.EmployeeViewModels.EmployeeOrderSubmissionViewModel
@{
    ViewData["Title"] = "Submission";
}

<h2>Order Submitted!</h2>
<h2>Confirmation #@Model.ConfirmationNumber</h2>
<h4>Order Summary</h4>
<h4>Fulfilled by Employee (ID): @Model.EmployeeID</h4>
<ul>
    <li>Date Ordered: @Model.DateSubmitted</li>
    <li>Time Submitted: @Model.TimeSubmitted</li>
</ul>
<ul>
    <li>Pizza Order: @Model.Size @Model.Crust</li>
    <li>Topping 1: @Model.Topping1</li>
    <li>Topping 2: @Model.Topping2</li>
    <li>Topping 3: @Model.Topping3</li>
    <li>Quantity:  @Model.Quantity</li>
</ul>
<ul>
    <li>Sub Total: $@Model.SubTotal.ToString("0.00")</li>
    <li>Total: $@Model.Total.ToString("0.00")</li>
</ul>

<a asp-action="Service" class="btn orderButton">Return To Service</a>

