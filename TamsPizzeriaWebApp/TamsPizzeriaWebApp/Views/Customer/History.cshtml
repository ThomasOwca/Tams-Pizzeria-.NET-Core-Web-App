@model  TamsPizzeriaWebApp.Models.AccountViewModels.OnlineHistoryViewModel
@{
    ViewData["Title"] = "History";
}

<h2>Your Online Order History!</h2>
<div class="col-lg-12">
    <table class="table table-responsive">
        <thead>
            <tr>
                <td>
                    Details Link
                </td>
                <td>
                    Confirmation
                </td>
                <td>
                    Date/Time
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>
                        <a asp-controller="Account" asp-action="OrderDetails" asp-route-id="@order.Confirmation">View Details</a>
                    </td>
                    <td>
                        @order.Confirmation
                    </td>
                    <td>
                        @order.OrderDate
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

